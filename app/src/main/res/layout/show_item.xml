<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/color4"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp">

        <!--text view for displaying our note text-->
        <TextView
            android:id="@+id/idTVTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@id/idIVButtonToLink"
            android:padding="4dp"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!--text view for displaying our last updated text-->
        <TextView
            android:id="@+id/idTVYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVTitle"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@id/idIVButtonToLink"
            android:padding="4dp"
            android:text="Year"
            android:textColor="@color/white"
            android:textSize="13sp" />
        <!--text view for displaying our last updated text-->
        <TextView
            android:id="@+id/idTVType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVYear"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@id/idIVButtonToLink"
            android:padding="4dp"
            android:text="Type"
            android:textColor="@color/white"
            android:textSize="13sp" />
        <!--text view for displaying our last updated text-->
        <TextView
            android:id="@+id/idTVCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVType"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@id/idIVButtonToLink"
            android:padding="4dp"
            android:text="Country"
            android:textColor="@color/white"
            android:textSize="13sp" />
        <!--text view for displaying our last updated text-->
        <TextView
            android:id="@+id/idTVGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVCountry"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@id/idIVButtonToLink"
            android:padding="4dp"
            android:text="Gender"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <!--imageview for displaying delete icon-->
        <ImageView
            android:id="@+id/idIVButtonToLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:src="@drawable/ic_link"
            app:tint="@color/white" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>